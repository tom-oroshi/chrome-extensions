{
  "name": "Chrome URL Looper Extension",
  "description": "Extension to loop through URLs at set intervals",
  "manifest_version": 3,
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": [
        "/js/app.js"
      ]
    }
  ],
  "icons": [
    {
      "src": "/images/icons/icon-512x512.png",
      "type": "image/png",
      "sizes": "512x512"
    }
  ],
  "background_color": "#5eead4",
  "display": "fullscreen",
  "scope": "/",
  "start_url": "/index.html",
  "storage": {
    "managed_schema": "/managed-storage-schema.json"
  }
}